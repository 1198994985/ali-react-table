{
  "compilerOptions": {
    "outDir": "dist",
    "strict": true,
    "target": "es2019",
    "declaration": true,
    "forceConsistentCasingInFileNames": true,
    "strictNullChecks": false,
    "skipLibCheck": true,
    "jsx": "react",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowJs": true,
    "baseUrl": ".",
    "paths": {
      "@alife/dvt-table": ["src/dvt-table.ts"]
    }
  },
  "include": ["src/**/*", "stories/**/*"]
}
